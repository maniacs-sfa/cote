{
  "name": "cote",
  "version": "0.13.2",
  "keywords": [
    "microservices",
    "zero-configuration",
    "zero-conf",
    "mesh",
    "network",
    "auto discovery",
    "scalable",
    "fault-tolerant"
  ],
  "description": "A Node.js library for building zero-configuration microservices.",
  "scripts": {
    "build": "babel src --presets babel-preset-es2015 -D -d dist -s",
    "clean": "rm -rf dist",
    "lint": "eslint src test",
    "lint-fix": "eslint --fix src test",
    "prepublish": "npm run build",
    "report-coverage": "nyc report --reporter=lcov > coverage.lcov && codecov",
    "test": "ava --timeout=30000"
  },
  "author": {
    "name": "Armagan Amcalar",
    "email": "armagan@amcalar.com"
  },
  "main": "dist/index.js",
  "license": "MIT",
  "repository": "dashersw/cote",
  "engines": {
    "node": ">=v4.0.0"
  },
  "dependencies": {
    "@dashersw/axon": "2.0.4",
    "charm": "1.0.2",
    "colors": "1.1.2",
    "eventemitter2": "4.1.0",
    "lodash": "4.17.4",
    "node-discover": "0.4.0",
    "uuid": "3.0.1",
    "portfinder": "1.0.13",
    "socket.io": "2.0.1"
  },
  "devDependencies": {
    "async": "^2.3.0",
    "async-q": "^0.3.1",
    "ava": "^0.17.0",
    "babel-cli": "^6.18.0",
    "babel-preset-es2015": "^6.24.1",
    "codecov": "^2.2.0",
    "commander": "2.2.0",
    "eslint": "^3.19.0",
    "eslint-config-google": "^0.7.1",
    "humanize-number": "0.0.2",
    "log-suppress": "^1.0.3",
    "nyc": "^10.3.2",
    "randomstring": "^1.1.5",
    "request": "^2.81.0",
    "sinon": "^2.3.2",
    "socket.io-client": "2.0.1"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 6
    },
    "extends": [
      "google"
    ],
    "rules": {
      "require-jsdoc": "off",
      "new-cap": "off",
      "guard-for-in": "off",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "max-len": [
        "error",
        {
          "code": 120
        }
      ]
    }
  }
}
